<div class="pt-6 md:p-8 md:text-left space-y-4">
  <h1 class="text-3xl font-bold mb-4 text-center">Blog Articles</h1>
  <% @articles.each do |article| %>
    <article class="mb-4">
      <h3 class="text-xl font-medium"><%= link_to article.title, article_path(article), class: "text-blue-500 hover:underline" %></h3>
      <p class="text-gray-700"><%= article.excerpt %></p>
    </article>
  <% end %>
</div>
